{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "User content update",
  "UserContentUpdate": {
    "type": "object",
    "properties": {
      "option": {
        "description": "Option to change",
        "type": "string",
        "enum": [
          "PATRON_GROUP",
          "EXPIRATION_DATE",
          "EMAIL_ADDRESS"
        ]
      },
      "action": {
        "description": "Changing action",
        "type": "string",
        "enum": [
          "FIND",
          "ADD_TO_EXISTING",
          "CLEAR_FIELD",
          "REPLACE_WITH",
          "FIND_AND_REMOVE_THESE"
        ]
      },
      "value": {
        "description": "Update value",
        "type": "object"
      }
    },
    "required": [
      "option",
      "action"
    ],
    "additionalProperties": false
  }
}
